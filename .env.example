# AI Olympics Charmander MCP Server Configuration
# Copy this to .env and fill in your values

# =============================================================================
# CORE DATA SOURCE APIs (Required for prospect research)
# =============================================================================

# Firecrawl API (Required for website scraping)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Apollo.io API (Contact enrichment and lead data)
APOLLO_API_KEY=your_apollo_api_key_here

# Serper API (Alternative search provider)
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# LLM INTEGRATION (AWS Bedrock)
# =============================================================================

# AWS Credentials for Bedrock
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=ap-southeast-2

# LLM Configuration
LLM_ENABLED=true
LLM_PROVIDER=bedrock
LLM_MODEL_ID=apac.anthropic.claude-sonnet-4-20250514-v1:0
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4000
LLM_TIMEOUT_SECONDS=60

# =============================================================================
# AUTHENTICATED BROWSING (Playwright MCP)
# =============================================================================

# LinkedIn Credentials (for authenticated browsing)
LINKEDIN_EMAIL=your_linkedin_email_here
LINKEDIN_PASSWORD=your_linkedin_password_here

# Job Board Credentials (Optional)
SEEK_EMAIL=your_seek_email_here
SEEK_PASSWORD=your_seek_password_here
INDEED_EMAIL=your_indeed_email_here
INDEED_PASSWORD=your_indeed_password_here
GLASSDOOR_EMAIL=your_glassdoor_email_here
GLASSDOOR_PASSWORD=your_glassdoor_password_here

# =============================================================================
# MCP SERVER CONFIGURATION
# =============================================================================

# Data Source Feature Flags
FIRECRAWL_ENABLED=true
APOLLO_ENABLED=true
SERPER_ENABLED=true
PLAYWRIGHT_ENABLED=true

# Database Configuration (SQLite - no changes needed)
DATABASE_URL=sqlite+aiosqlite:///data/database/prospects.db

# Server Configuration
HOST=localhost
PORT=8000
DEBUG=true

# =============================================================================
# OPTIONAL: ADDITIONAL DATA SOURCE APIs
# =============================================================================

# News APIs (Optional)
NEWS_API_KEY=your_news_api_key_here

# Government Registry APIs (Optional - varies by region)
# Australia ASIC Connect
ASIC_API_KEY=your_asic_api_key_here

# US SEC EDGAR API (no key required)
SEC_USER_AGENT=your_company_name_contact@yourcompany.com

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================

# Request timeouts and rate limits
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=5
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ai_olympics.log

# =============================================================================
# FALLBACK CONFIGURATION
# =============================================================================

# Fallback behavior when data sources fail
ENABLE_FALLBACK=true
MIN_SUCCESSFUL_SOURCES=1
CONTINUE_ON_SOURCE_FAILURE=true
